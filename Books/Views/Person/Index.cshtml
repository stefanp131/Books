@model IEnumerable<Books.Models.PersonViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>People</h2>

<p>
    <span class="glyphicon glyphicon-plus"></span>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default" })
</p>
<div class="col-md-12">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>Role</th>            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @item.Role.ToString()
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", new { id = @item.Id }, new { @class = "btn btn-default" }) 
                        @Html.ActionLink("Details", "Details", new { id = @item.Id }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete", "Delete", new { id = @item.Id }, new { @class = "btn btn-default" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>